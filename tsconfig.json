{
  "compilerOptions": {
    "declaration": true,
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020"],
    "strict": true,
    "noImplicitAny": false,
    "removeComments": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "outDir": "dist"
  },
  "exclude": ["node_modules", "**/*.test.js", "**/*.test.ts", "dist"]
}
